	</bean>
	
	<bean id="hong" class="com.test02.Address">
		<constructor-arg index="0" value="홍길동"></constructor-arg>
		<constructor-arg index="1" value="경기도 수원시"></constructor-arg>
		<constructor-arg index="2" value="010-2222-2222"></constructor-arg>
