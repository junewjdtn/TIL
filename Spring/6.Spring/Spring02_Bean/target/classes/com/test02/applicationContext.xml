	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="lee" class="com.test02.Address">
		<constructor-arg>
			<value>이순신</value>
		</constructor-arg>
		<constructor-arg>
			<value>서울시 강남구</value>
		</constructor-arg>
		<constructor-arg>
			<value>010-1111-1111</value>
